// C++ Program to Insert an element at a specific position in an Array

#include <bits/stdc++.h>
using namespace std;
// Function to insert element at a specific position

void insertElement(int arr[], int n, int x, int pos)
{
	// shift elements to the right which are on the right side of pos
	for (int i = n - 1; i >= pos; i--)
		arr[i + 1] = arr[i];

	arr[pos] = x;
}

int main()
{
	int arr[15] = { 2, 4, 1, 8, 5 };
	int n = 5;

	cout<<"Before insertion : ";
	for (int i = 0; i < n; i++)
		cout<<arr[i]<<" ";

	cout<<endl;

	int x = 10, pos = 2;

	// Function call
	insertElement(arr, n, x, pos);
	n++;

	cout<<"After insertion : ";
	for (int i = 0; i < n; i++)
		cout<<arr[i]<<" ";

	return 0;
}
============================================================================================================================

#include <bits/stdc++.h>
using namespace std;

void element(int arr[],int n,int ele,int pos){
    for(int i=n-1;i>=pos;i--){
        arr[i+1]=arr[i];
    }
     arr[pos]=ele;
     n++;
}
int main() {
	int arr[6]={1,2,3,4,5};
	int n=sizeof(arr)/sizeof(arr[0]);
	int ele=10;
	int pos=2;
	
	 cout << "Before insertion: ";
    for (int i = 0; i < n; i++) {
        cout << arr[i] << " ";
    }
    cout << endl;


	element(arr,n,ele,pos);
	for(int i=0;i<n;i++){
	    cout<<arr[i]<<" ";
	}
	cout<<endl;
	return 0;
}
